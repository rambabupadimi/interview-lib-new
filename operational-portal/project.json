{
  "name": "operational-portal",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "operational-portal/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "web",
        "compiler": "babel",
        "outputPath": "dist/operational-portal",
        "main": "operational-portal/src/main.tsx",
        "tsConfig": "operational-portal/tsconfig.app.json",
        "webpackConfig": "operational-portal/webpack.config.js",
        "assets": [
          {
            "glob": "favicon.ico",
            "input": "src",
            "output": "."
          },
          {
            "glob": "**/*",
            "input": "src/assets",
            "output": "assets"
          }
        ],
        "styles": ["src/styles.css"],
        "scripts": []
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "production": {
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "operational-portal:build",
        "port": 4202
      },
      "configurations": {
        "development": {
          "buildTarget": "operational-portal:build:development"
        },
        "production": {
          "buildTarget": "operational-portal:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "operational-portal/jest.config.ts"
      }
    }
  }
}
